<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.ui.comp.smartfilterbar" xmlns:m="sap.m">
    <ControlConfiguration
        id="myCustomFilter"
        key="myCustomFilter"
        label="My Custom Filter"
        visibleInAdvancedArea="true">
        <customControl>
            <m:ComboBox id="myCustomFilterComboBox">
                <m:items>
                    <core:Item id="myCustomFilterComboBoxItem0" key="noTaxRequired" text="No Tax Required"/>
                    <core:Item id="myCustomFilterComboBoxItem1" key="taxRequired" text="Tax Required"/>
                </m:items>
            </m:ComboBox>
        </customControl>
    </ControlConfiguration>
</core:FragmentDefinition>
